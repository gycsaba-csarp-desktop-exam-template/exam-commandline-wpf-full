<Window x:Class="KretaDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KretaDesktop"
        mc:Ignorable="d"
        Title="Kréta - iskolai adminisztráció" Height="450" Width="800"
        WindowStyle="None"
        WindowState="Maximized">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" MinWidth="5" MaxWidth="120"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Menu>
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"></VirtualizingStackPanel>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Listák"></MenuItem>
            <MenuItem Header="Áthelyezések"></MenuItem>
            <MenuItem Header="Műveletek"></MenuItem>
        </Menu>
        <GridSplitter Grid.Column="1" Width="2" Background="Black"></GridSplitter>
    </Grid>
</Window>
